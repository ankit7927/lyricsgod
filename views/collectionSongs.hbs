<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="best hindi song, hindi song, hindi lyrics, song lyrics">
    <meta name="description" content="{{collection.dic}}">
    {{>links}}
    <title>{{collection.title}}</title>
</head>

<body>
    {{>nav}}
    <main>
        <div class="container">
            <div class="py-5">
                <h1 class="h1">{{collection.title}}</h1>
                <p>{{collection.dic}}</p>
            </div>
            <div class="row row-cols-2 row-cols-md-4 g-4">
                {{#each songs}}
                <div class="col h-100">
                    <div class="bg-image ripple shadow-4-soft rounded-6 overflow-hiddend-block"
                        data-ripple-color="light">
                        <img src="{{this.img}}" class="w-100" alt="{{this.name}} song lyrics" />
                        <a href="/lyric/{{this.name}}">
                            <div class="mask">
                                <div class="d-flex justify-content-start align-items-end h-100 p-3">
                                    <span class="badge badge-primary me-2">{{this.name}}</span>
                                </div>
                            </div>
                            <div class="hover-overlay">
                                <div class="mask" style="background-color: hsla(0, 0%, 98.4%, 0.15)"></div>
                            </div>
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
            <nav aria-label="Page navigation" class="mt-4">
                <ul  class="pagination justify-content-center pagination-sm">
                    {{#each totalPage}}
                    <li class="page-item"><a class="page-link" href="?page={{incPage this}}">{{incPage this}}</a></li>
                    {{/each}}
                </ul>
            </nav>
        </div>
    </main>
    {{>footer}}
</body>

</html>