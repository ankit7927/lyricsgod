<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="{{title}}, {{title}} lyrics, {{title}} songs lyrics">
    {{>links}}
    <title>{{title}}</title>
    <meta name="description" content="{{title}} album songs lyrics">
</head>

<body>
    {{>nav}}
    <main class="container">

        <h1 class="mt-3 mb-4">{{title}}</h1>
        <div class="card">
            <ul class="list-group list-group-light">

                {{#each albumSongs}}

                <li class="list-group-item px-3 list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="ms-3">
                            <p class="fw-bold mb-1"><a href="/lyric/{{this.name}}/">{{this.name}}</a></p>
                            <div class="badge badge-primary me-2 mb-2">{{modifyDate this.release_date}}</div>
                            <p class="text-muted">{{this.singer}}</p>
                        </div>
                    </div>
                    <img src="{{this.img}}" class="rounded-6" alt="{{this.name}} song lyrics - {{this.singer}}"
                        style="width: 180px; height: 120px" />
                </li>

                {{/each}}


            </ul>
        </div>
    </main>
    {{>footer}}
</body>

</html>